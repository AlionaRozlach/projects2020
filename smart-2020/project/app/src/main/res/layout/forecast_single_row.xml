<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/black"
    app:strokeColor="@color/white"
    app:strokeWidth="1dp"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_margin="5dp"
            android:weightSum="2"
            android:id="@+id/linLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            >


            <LinearLayout
                android:id="@+id/linLay1"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/hourFTV"
                    android:layout_marginTop="05dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 PM"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:id="@+id/dateNameFTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/dateFTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27 - 9 - 2018"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    >
                    <ImageView
                        android:id="@+id/weatherIconFTV"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="05dp"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:id="@+id/tempFTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="3dp"
                        android:text="29"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tempDescriptionFTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sunny"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linLay2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/humidityFTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text=" 29 %"
                    android:gravity="left"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/cloudFTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:text=" 29 %"
                    android:padding="4dp"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/tempMaxFTV"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:text=" 29 "
                    android:padding="4dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tempMinFTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:text=" 29 "
                    android:padding="4dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:dividerPadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/windsFTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=""/>
            <TextView
                android:id="@+id/pressureFTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressure"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/cloudsAllFTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=""/>

        </LinearLayout>

    </LinearLayout>




</com.google.android.material.card.MaterialCardView>